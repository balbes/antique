#!/bin/sh

gfxboot_datadir=/usr/share/gfxboot
bootlogo=$gfxboot_datadir'/@DESIGN@/bootlogo'

if [ ! -f "$bootlogo" ]; then
	echo "${0##*/} - SKIP: $bootlogo not found"
	ls -alR $gfxboot_datadir
	exit 0
fi
cd "$WORKDIR"
mkdir -p syslinux
cd syslinux

# unpack
cpio -iduV <"$bootlogo"

# pack
printf 'init\nlanguages\n' |
	cpio -oV >bootlogo
